{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ES2020"],
    "sourceMap": true,

    /* Output Directory */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,

    /* Module Resolution Options */
    "moduleResolution": "NodeNext", // <--- AND CHANGE THIS
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
